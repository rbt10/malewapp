{% extends 'base.html.twig' %}

{% block title %}Nous Contacter - Malewapp{% endblock %}

{% block content %}
    <div class="container">
        <div class="row py-5 px-3 rounded-4 shadow">
            <h1 class="fw-bold">Nous Contacter</h1>
            <p class="pb-5 fw-light">N'hésitez pas à prendre contact avec notre équipe, nous vous répondrons dans les meilleurs delais </p>
            {% if notification %}
                <div class="alert alert-info">{{ notification }}</div>
            {% endif %}
            <div class="col-12 col-md-6 ">
                <img src="{{ asset('assets/images/breakfirst.jpg') }}" alt="breakfast" class="img-fluid w-100">
            </div>
            <div class=" col-12 col-md-6 ">
                {{ form(form) }}
            </div>
        </div>
    </div>


{% endblock %}
