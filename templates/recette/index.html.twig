{% extends 'base.html.twig' %}

{% block title %}Les recettes - Malewapp{% endblock %}

{% block content %}
    <div class="container py-3">
        <div class="row">
            <div class=" col-12 col-md-3">
                <p >Filtrer</p>
                {{ form(form) }}
                <hr>
            </div>
            <div class="col-12 col-md-9">
                <h1 class="fw-bold mb-4" >Nos Recettes</h1>
                <div class="row ">
                    <!-- On affiche que les recettes publiques -->
                    {% for recette in recettes %}
                        <div class="col-12 col-md-4 mb-3"">
                            {% include 'recette/single.html.twig' %}
                        </div>
                    {% endfor %}

                </div>
                <div class="d-flex justify-content-center pagination mt-5">
                    {{ knp_pagination_render(recettes)}}
                </div>
            </div>

        </div>
    </div>


{% endblock %}


